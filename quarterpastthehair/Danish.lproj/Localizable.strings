"twentyfive past %@" 	= "femogtyve minutter over %@";
"twentyfive past ref" 	= "current";

"half past %@" 			= "halv %@";
"half past ref" 		= "next";

"twentyfive to %@" 		= "femogtyve minutter i %@";
"twentyfive to ref" 	= "next";

"twenty to %@" 			= "tyve minutter i %@";
"twenty to ref" 		= "next";

"quarter to %@" 		= "kvart i %@";
"quarter to ref" 		= "next";

